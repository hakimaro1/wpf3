<Window x:Class="WpfHello.MyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MyWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox"
                 HorizontalAlignment="Left"
                 Margin="130,135,0,0" 
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" 
                 Height="80" Width="120" 
                 TextChanged="textBox_TextChanged"/>
        <Button Content="Отправить" HorizontalAlignment="Left" Margin="130,271,0,0" VerticalAlignment="Top" Height="39" Width="120" Click="Button_Click" />
    </Grid>
</Window>
